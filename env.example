# =============================================================================
# Backend Configuration - Chatbot Tư vấn Tuyển sinh HUCE
# =============================================================================
# Copy file này thành .env và điều chỉnh các giá trị theo môi trường của bạn

# -----------------------------------------------------------------------------
# NLP Configuration
# -----------------------------------------------------------------------------
# Ngưỡng confidence cho intent detection (0.0 - 1.0)
INTENT_THRESHOLD=0.35

# Giới hạn số câu lưu trong context
CONTEXT_HISTORY_LIMIT=10

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Host và port cho server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Debug mode (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Danh sách origins được phép (ngăn cách bởi dấu phẩy)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Cho phép credentials
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Data Configuration
# -----------------------------------------------------------------------------
# Đường dẫn thư mục chứa dữ liệu CSV (relative to backend folder)
# DATA_DIR=./data

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
# Bật/tắt CSV caching
ENABLE_CSV_CACHE=true

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Số kết quả tối đa trả về
MAX_RESULTS=100

# Số gợi ý ngành tối đa
MAX_SUGGESTIONS=20

